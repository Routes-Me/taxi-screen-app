<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <carbon.widget.RelativeLayout
            android:id="@+id/Advertisement_Video_CardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/_2sdp"
            app:carbon_cornerRadius="@dimen/_4sdp"
            app:layout_constraintHeight_percent="0.772"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.865">

            <carbon.widget.RelativeLayout
                android:id="@+id/videoShadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                app:carbon_cornerRadius="@dimen/_4sdp"
                app:carbon_elevation="@dimen/_8sdp">

                <com.google.android.exoplayer2.ui.StyledPlayerView
                    android:id="@+id/playerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    app:resize_mode="fill"
                    app:surface_type="texture_view"
                    app:use_controller="false" />

                <io.netopen.hotbitmapgg.library.view.RingProgressBar
                    android:id="@+id/videoRingProgressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    app:max="100"
                    app:ringColor="@color/white"
                    app:ringProgressColor="@color/red"
                    app:ringWidth="@dimen/_1sdp"
                    app:style="FILL" />

            </carbon.widget.RelativeLayout>

        </carbon.widget.RelativeLayout>



        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPageSideBanner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.772"
            app:layout_constraintStart_toEndOf="@id/Advertisement_Video_CardView"
            app:layout_constraintTop_toTopOf="@id/Advertisement_Video_CardView"
            app:layout_constraintWidth_percent="0.128">

        </androidx.viewpager2.widget.ViewPager2>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bottomLeftPromtion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:layout_constraintWidth_percent="0.59"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/Advertisement_Video_CardView">

        </androidx.viewpager2.widget.ViewPager2>

        <include
            android:id="@+id/constraintLayoutDateCell"
            layout="@layout/date_cell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:visibility="invisible"
            app:layout_constraintWidth_percent="0.135"
            card_view:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bottomLeftPromtion"
            app:layout_constraintEnd_toStartOf="@id/bottomRightPromotion"
            card_view:layout_constraintTop_toBottomOf="@+id/Advertisement_Video_CardView">

        </include>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bottomRightPromotion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintWidth_percent="0.135"
            app:layout_constraintStart_toEndOf="@id/constraintLayoutDateCell"
            app:layout_constraintEnd_toStartOf="@id/goRoutesQRCode_cv"
            app:layout_constraintTop_toTopOf="@id/constraintLayoutDateCell"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayoutDateCell"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/goRoutesQRCode_cv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.126"
            app:cardBackgroundColor="?cardViewBackground_color"
            app:cardCornerRadius="@dimen/_4sdp"
            app:layout_constraintDimensionRatio="H,53 : 55"
            app:layout_constraintStart_toEndOf="@id/bottomRightPromotion"
            app:layout_constraintEnd_toEndOf="@+id/viewPageSideBanner"
            app:layout_constraintTop_toTopOf="@id/bottomRightPromotion"
            app:layout_constraintBottom_toBottomOf="@id/bottomRightPromotion">

            <carbon.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?cardViewBackground_color">

                <ImageView
                    android:id="@+id/goRoutesQRCode_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/driverReferalCode_ll"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/driverReferalCode_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/goRoutesQRCode_iv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="?driver_icon"
                        android:layout_marginEnd="@dimen/_2sdp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/driverReferalCodeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:text="56692566"
                        android:textColor="?text_color"
                        android:textSize="@dimen/_8sdp"
                        android:gravity="center" />

                </LinearLayout>

            </carbon.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

