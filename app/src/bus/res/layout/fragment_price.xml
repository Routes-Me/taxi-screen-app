<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.PriceFragment"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/ticketPrice_keyword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Ticket Price"
        android:textColor="?homeScreenTextColor"
        android:textSize="@dimen/_15ssp"
        android:textStyle="normal"
        android:layout_marginBottom="@dimen/_4sdp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fils_keyword_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_7sdp"
            android:fontFamily="@font/montserrat_regular"
            android:text="fils"
            android:textColor="?homeScreenTextColor"
            android:textSize="@dimen/_22ssp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/ticketPrice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?homeScreenTextColor"
            android:textSize="@dimen/_35ssp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/scan_keyword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="sans-serif"
        android:text="@string/scan_your_qr_code_or_nfc"
        android:textColor="?homeScreenTextColor"
        android:textSize="@dimen/_15ssp"
        android:textStyle="normal" />

</androidx.appcompat.widget.LinearLayoutCompat>