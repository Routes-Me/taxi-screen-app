    <carbon.widget.LinearLayout
        android:id="@+id/Advertisement_Banner_CardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:carbon_cornerRadius="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Advertisement_Video_CardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <carbon.widget.RelativeLayout
            android:id="@+id/bannerShadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/white"
            app:carbon_elevation="@dimen/_8sdp"
            app:carbon_cornerRadius="@dimen/_4sdp"
            app:carbon_elevationShadowColor="@color/card_shadow">

            <ImageView
                android:id="@+id/advertisementsImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:background="#0f000000"
                android:scaleType="fitXY" />

        </carbon.widget.RelativeLayout>

    </carbon.widget.LinearLayout>
