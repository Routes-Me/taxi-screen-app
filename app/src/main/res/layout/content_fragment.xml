<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <carbon.widget.LinearLayout
        android:id="@+id/Advertisement_Video_CardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.865"
        android:layout_marginEnd="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Advertisement_Banner_CardView"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:carbon_cornerRadius="@dimen/_4sdp">

        <carbon.widget.RelativeLayout
            android:id="@+id/videoShadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/white"
            app:carbon_elevation="@dimen/_8sdp"
            app:carbon_cornerRadius="@dimen/_4sdp">

            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:resize_mode="fill"
                app:use_controller="true" />

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:id="@+id/videoRingProgressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                app:max="100"
                app:ringColor="@color/white"
                app:ringWidth="@dimen/_1sdp"
                app:ringProgressColor="@color/red"
                app:style="FILL" />

        </carbon.widget.RelativeLayout>

    </carbon.widget.LinearLayout>

