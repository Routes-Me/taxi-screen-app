<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <carbon.widget.RelativeLayout
        android:id="@+id/emptyVideoBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:carbon_cornerRadius="@dimen/_4sdp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_promotion" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </carbon.widget.RelativeLayout>
    <carbon.widget.RelativeLayout
        android:id="@+id/videoBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        app:cardElevation="@dimen/_10sdp"
        android:visibility="visible"
        app:carbon_cornerRadius="@dimen/_4sdp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?cardViewBackground_color"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/videoLogoImage"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="H,1: 1"
                app:shapeAppearanceOverlay="@style/roundedCornersImageView"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:maxLines="2"
                android:text="Macdonalds offfer a "
                android:textColor="?text_color"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                card_view:layout_constraintEnd_toStartOf="@+id/videoQrCodeImage"
                card_view:layout_constraintStart_toEndOf="@+id/videoLogoImage"
                card_view:layout_constraintTop_toTopOf="@+id/videoLogoImage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/subTitleTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:maxLines="2"
                android:text="Scan Now"
                android:textColor="?text_color"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@id/titleTv"
                app:layout_constraintTop_toBottomOf="@id/titleTv"
                card_view:layout_constraintEnd_toStartOf="@+id/videoQrCodeImage" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/videoQrCodeImage"
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_56sdp"
                app:layout_constraintDimensionRatio="H,1: 1"
                android:layout_marginEnd="@dimen/_5sdp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </carbon.widget.RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>