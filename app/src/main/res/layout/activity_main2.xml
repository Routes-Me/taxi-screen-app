<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".View.LastHomeScreen.Activity.MainActivity"
    android:id="@+id/tabletLayout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:orientation="vertical">





        <!--homepage content-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <!--75% OF SCREEN-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:background="@drawable/bg_color">


                    <ImageView
                        android:id="@+id/ADS_ImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_color"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border">


                    <VideoView
                        android:id="@+id/ADS_VideoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:visibility="visible" />



                </RelativeLayout>

            </LinearLayout>




            <!--25% OF SCREEN-->
            <FrameLayout
                android:id="@+id/frameLayout_home"
                android:layout_width="match_parent"
                android:layout_weight=".75"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/home_layout"
                    android:layout_weight=".75">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_color"
                        android:layout_height="80dp"
                        >


                        <ImageView
                            android:id="@+id/app_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/tab_logo" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/adminPatternView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rsz_counter_background2"
                        android:tint="#6F000000"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:visibility="gone">


                        <com.andrognito.patternlockview.PatternLockView
                            android:id="@+id/pattern_lock_view_admin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grad_bg"
                            app:normalStateColor="@color/textColor"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/userView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rsz_counter_background2"
                        android:tint="#6F000000"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:visibility="visible">


                        <ImageView
                            android:id="@+id/btn_selectLang"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/english_flag"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:visibility="gone"/>


                        <LinearLayout
                            android:id="@+id/languageLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="5dp">




                                    <TextView
                                        android:id="@+id/btn_englishLang"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/round_button"
                                        android:padding="6dp"
                                        android:layout_marginRight="5dp"
                                        android:textColor="#245283"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                        android:text="English"
                                        android:gravity="center"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        />



                                <TextView
                                    android:id="@+id/btn_arabicLang"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/round_button"
                                    android:padding="6dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#245283"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:text="Arabic"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="5dp">

                                <TextView
                                    android:id="@+id/btn_tagalogLang"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/round_button"
                                    android:padding="6dp"
                                    android:layout_marginRight="5dp"
                                    android:textColor="#245283"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:text="Tagalog"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:id="@+id/btn_urduLang"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/round_button"
                                    android:padding="6dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#245283"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:text="Urdu"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/counterLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="visible"
                           >


                        <TextView
                            android:id="@+id/DayClock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="THU"
                            android:textColor="#245283"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                            android:textSize="30dp"/>
                        <TextView
                            android:id="@+id/timeClock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="03:51:21 PM"
                            android:textColor="#245283"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                            android:textSize="30dp"/>

                        <TextView
                            android:id="@+id/DateClock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12 June. 2019"
                            android:textColor="#245283"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                            android:textSize="30dp"/>



                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_weight=".3">

                            <FrameLayout
                                android:id="@+id/fragment_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ffffff"
                                android:visibility="visible" />


                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>




        <!--Currencies scroll-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/scroll_news"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight=".25">






                <TextView
                    android:id="@+id/scrollingtextMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/vagabnd"
                    android:textColor="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:layoutDirection="rtl"

                    android:visibility="visible"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    />


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>