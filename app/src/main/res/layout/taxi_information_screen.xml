<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".View.Login.Activity.TaxiInformationScreen">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/MyToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="40dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="18.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="27.5dp"
                android:src="@drawable/ic_back_grey"
                android:visibility="visible"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/grey"
                android:gravity="center_horizontal"
                android:text="Welcome,  "
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="27.5dp"/>


            <TextView
                android:id="@+id/tv_TechnicalSupportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/grey"
                android:gravity="center_horizontal"
                android:text="Technical Support Name"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/grey"
        android:text="Almost done .."
        android:textSize="18sp"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="71dp"
        android:layout_gravity="start"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="482dp"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="71dp"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textColor="@color/grey"
                    android:text="Taxi"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="start"/>


                <EditText
                    android:id="@+id/taxiPlateNumber_et"
                    android:layout_width="482dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Taxi plate number"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomEditText"
                    android:layout_gravity="start"/>

                <TextView
                    android:id="@+id/taxiOffice_et"
                    android:layout_width="482dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="25dp"
                    android:hint="Taxi office"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomEditText"
                    android:drawableRight="@drawable/ic_right_arrow" />

                <RelativeLayout
                    android:layout_width="482dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="25dp"
                    style="@style/AppTheme.CustomEditText">

                    <Spinner
                        android:id="@+id/taxitype_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:hint="Taxi office"
                        android:textColor="#8a000000"
                        android:textColorHint="#8a000000"
                        android:textSize="18sp"
                        />

                </RelativeLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textColor="@color/grey"
                    android:text="Device"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="start"/>


                <TextView
                    android:id="@+id/deviceSerialNumber_et"
                    android:layout_width="482dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="40dp"
                    android:hint="Device Serial Number"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomTextView"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textColor="@color/grey"
                    android:text="Driver"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="start"/>


                <EditText
                    android:id="@+id/driverName_et"
                    android:layout_width="482dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Name"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomEditText"/>

                <EditText
                    android:id="@+id/driverPhoneNumber_et"
                    android:layout_width="482dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Phone number"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomEditText"/>

                <EditText
                    android:id="@+id/driverCivilID_et"
                    android:layout_width="482dp"
                    android:layout_height="60dp"
                    android:hint="Civil ID"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomEditText"/>




            </TableLayout>
        </ScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/register_btn"
                android:layout_width="147dp"
                android:layout_height="41dp"
                android:text="Register"
                android:layout_gravity="end"
                android:layout_marginBottom="27dp"
                android:layout_marginRight="26dp"
                 android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                style="@style/AppTheme.CustomButton"
                />

        </RelativeLayout>



    </LinearLayout>





</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>