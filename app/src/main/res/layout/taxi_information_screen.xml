<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".View.Login.Activity.TaxiInformationScreen"
android:background="@color/white"    >



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >



    <LinearLayout
        android:id="@+id/taxiDataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/MyToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            style="@style/AppTheme.CustomTextViewToolbar"
            android:layout_marginTop="31dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Welcome,  "
                    android:layout_gravity="center"
                    style="@style/AppTheme.CustomTextViewToolbar"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/tv_TechnicalSupportName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Technical Support Name"
                    android:layout_gravity="center"
                    style="@style/AppTheme.CustomTextViewToolbar"
                    android:visibility="gone"/>

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="70dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Almost done .."
                    android:layout_marginBottom="40dp"
                    android:textSize="21dp"
                    style="@style/AppTheme.CustomTextViewTitle"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Taxi"
                    android:layout_marginBottom="15dp"
                    style="@style/AppTheme.CustomTextViewTitle"
                    />





                <TextView
                    android:id="@+id/taxiOffice_et"
                    android:layout_width="482dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:hint="Taxi office"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomEditText"
                    android:drawableRight="@drawable/ic_right_arrow" />



                <TextView
                    android:id="@+id/taxiPlateNumber_et"
                    android:layout_width="482dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:hint="Taxi plate number"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomEditText"
                    android:drawableRight="@drawable/ic_right_arrow" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="start"
                    style="@style/AppTheme.CustomTextViewTitle"/>


                <TextView
                    android:id="@+id/deviceSerialNumber_et"
                    android:layout_width="482dp"
                    android:layout_height="wrap_content"
                    android:hint="Tablet Serial Number"
                    android:nextFocusDown="@id/password_et"
                    style="@style/AppTheme.CustomTextView"/>



        </LinearLayout>






    </LinearLayout>



        <Button
            android:id="@+id/register_btn"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:text="Register"
            style="@style/AppTheme.CustomButton"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>





</RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>