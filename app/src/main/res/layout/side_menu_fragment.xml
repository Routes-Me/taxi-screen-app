<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.View.Home_Screen_Fragments.SideMenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="6dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?cardViewBackground_color"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="35dp"
                    android:paddingTop="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/clock_tv"
                        style="@style/AppTheme.counterText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-light"
                        android:lines="1"
                        android:text="11:29"
                        android:textColor="?text_color"
                        android:textSize="32sp"
                        android:textStyle="normal"
                        app:autoSizeMaxTextSize="32sp"
                        app:autoSizeMinTextSize="24sp"
                        app:autoSizeStepGranularity="0.5sp" />

                    <TextView
                        android:id="@+id/dayOfWeek_tv"
                        style="@style/AppTheme.counterText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-light"
                        android:lines="1"
                        android:text="Monday,"
                        android:textColor="?text_color"
                        android:textSize="32sp"
                        android:textStyle="normal"
                        app:autoSizeMaxTextSize="32sp"
                        app:autoSizeMinTextSize="24sp"
                        app:autoSizeStepGranularity="0.5sp" />

                    <TextView
                        android:id="@+id/dayOfMonth_tv"
                        style="@style/AppTheme.counterText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-light"
                        android:lines="1"
                        android:text="Dec 2"
                        android:textColor="?text_color"
                        android:textSize="32sp"
                        android:textStyle="normal"
                        app:autoSizeMaxTextSize="32sp"
                        app:autoSizeMinTextSize="24sp"
                        app:autoSizeStepGranularity="0.5sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?cardViewBackground_color"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="35dp"
                android:paddingTop="35dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginBottom="10dp"
                    android:src="?wifi_icon"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginBottom="8dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif-light"
                    android:lines="1"
                    android:text="Routes"
                    android:textColor="?text_color"
                    android:textSize="32sp"
                    android:textStyle="normal"
                    app:autoSizeMaxTextSize="32sp"
                    app:autoSizeMinTextSize="24sp"
                    app:autoSizeStepGranularity="1sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:src="?key_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginStart="2dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-light"
                        android:lines="1"
                        android:text="12345678"
                        android:textColor="?text_color"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        app:autoSizeMaxTextSize="24sp"
                        app:autoSizeMinTextSize="16sp"
                        app:autoSizeStepGranularity="1sp" />

                </LinearLayout>

            </LinearLayout>

            </androidx.cardview.widget.CardView>


            <FrameLayout
                android:id="@+id/fragment_container_clickableItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>