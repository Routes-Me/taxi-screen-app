<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.View.Home_Screen_Fragments.SideMenuFragment"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15dp">


                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_sun"
                    android:visibility="gone"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.counterText"
                        android:textSize="24sp"
                        android:text="Sunny"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.counterText"
                        android:textSize="24sp"
                        android:text="20"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.counterText"
                        android:textSize="24sp"
                        android:text="|"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.counterText"
                        android:textSize="24sp"
                        android:text="11" />


                </LinearLayout>




                <TextView
                    android:id="@+id/timeClock_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.counterText"

                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="27dp"
                    android:autoSizeMaxTextSize="32sp"
                    android:autoSizeStepGranularity="2sp"
                    android:text="Time" />



                <TextView
                    android:id="@+id/timeDate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.counterText"

                    android:text="Date"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="27dp"
                    android:autoSizeMaxTextSize="32sp"
                    android:autoSizeStepGranularity="2sp"/>





            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2D000000"
                android:layout_marginStart="8dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15dp">


                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:src="@drawable/ic_wifi"
                    android:visibility="visible"
                    android:layout_marginRight="11.5dp"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:text="Routes"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="16sp"
                        android:autoSizeMaxTextSize="19sp"
                         />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:text="12345678"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="17sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2D000000"
                android:layout_marginStart="8dp"/>

            <FrameLayout
                android:id="@+id/fragment_container_clickableItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />


        </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>