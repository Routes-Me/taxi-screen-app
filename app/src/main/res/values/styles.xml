<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen_Light_Mode" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="homeScreenBackground_color">@color/homeScreen_lightBackground</item>
        <item name="cardViewBackground_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="wifi_icon">@drawable/ic_wifi_black</item>
        <item name="key_icon">@mipmap/key_black</item>
        <item name="pfBackground_color">@color/pf_lightBackground</item>
        <item name="pfTopBackground_color">@drawable/pf_blue_background</item>
        <item name="pfText_color">@color/pf_textColorLight</item>
        <item name="pfCopyrightTextColor">@color/pf_copyrightTextColor_light</item>
        <item name="pfRoutesLogo">@mipmap/routes_icon_light</item>
        <item name="pfQrCodeShadow">@color/pf_copyrightTextColor_light</item>
    </style>

    <style name="FullScreen_Dark_Mode" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="homeScreenBackground_color">@color/black</item>
        <item name="cardViewBackground_color">@color/cardView_darkBackground</item>
        <item name="text_color">@color/white</item>
        <item name="wifi_icon">@drawable/ic_wifi_white</item>
        <item name="key_icon">@mipmap/key_white</item>
        <item name="pfBackground_color">@color/pf_darkBackground</item>
        <item name="pfTopBackground_color">@color/pf_darkBackground</item>
        <item name="pfText_color">@color/white</item>
        <item name="pfCopyrightTextColor">@color/white</item>
        <item name="pfRoutesLogo">@mipmap/routes_icon_dark</item>
        <item name="pfQrCodeShadow">@null</item>
    </style>

    <style name="AppTheme.CustomEditText" parent="android:style/Widget.EditText">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/grey_border_edit_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:textColorHint">#8a000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="AppTheme.scrollingTextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.CustomTextViewToolbar">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.CustomTextViewList">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AppTheme.counterText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.CustomTextViewTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.CustomButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/next_button_border_enable</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.CustomTextView">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/grey_border_text_view</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:textColorHint">#8a000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SpotsDialogStyle" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:background">@color/tint_color</item>
        <item name="DialogTitleText">@string/please_wait</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">4</item>

    </style>
</resources>