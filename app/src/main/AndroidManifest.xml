<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.routesme.taxiscreen">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- Phone Info Permissions -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Tracking Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Hotspot Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name="com.routesme.taxi_screen.Class.App"
        android:allowBackup="true"
        android:icon="@mipmap/taxi_screen_icon"
        android:keepScreenOn="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/taxi_screen_icon"
        android:screenOrientation="landscape"
        android:supportsRtl="false"
        android:theme="@style/noActionBar"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustResize|stateHidden"
        tools:replace="android:supportsRtl">
        <activity android:name="com.routesme.taxi_screen.Hotspot_Configuration.HotspotScreen">

        </activity>
        <activity
            android:name="com.routesme.taxi_screen.View.Login.TaxiInformationScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="com.routesme.taxi_screen.View.Login.TaxiInformationListScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="com.routesme.taxi_screen.View.Login.LearnMoreScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.routesme.taxi_screen.View.Login.LoginScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" /> <!-- Last design of home screen -->
        <activity
            android:name="com.routesme.taxi_screen.View.LastHomeScreen.Activity.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustNothing" /> <!-- New design of home screen -->
        <activity
            android:name="com.routesme.taxi_screen.View.NewHomeScreen.Activity.HomeScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Detect Internet Connection Status -->
        <receiver
            android:name="com.routesme.taxi_screen.DetectInternetConnectionStatus.ConnectivityReceiver"
            android:enabled="true" >
            <intent-filter>

                <!-- Intent filters for broadcast receiver -->
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </receiver>



    </application>

</manifest>