<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.routesapp">


    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".Class.App"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:keepScreenOn="true"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:screenOrientation="landscape"
        android:supportsRtl="false"
        android:theme="@style/noActionBar"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustResize|stateHidden"
        tools:replace="android:supportsRtl">




        <activity android:name=".View.Login.Activity.TaxiInformationScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">



        </activity>

        <activity android:name=".View.Login.TaxiInformationOfficeListScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"/>

        <activity
            android:name=".View.Login.Activity.LearnMoreScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".View.Login.Activity.LoginScreen"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >




        </activity>
        <activity
            android:name=".View.Activity.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustNothing">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>